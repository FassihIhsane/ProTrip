<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/nim"
    tools:context=".ui.UserProfile">
    <include layout="@layout/toolbar_app"
        android:id="@+id/toolbar"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image_profile"
        android:layout_width="@dimen/_150sdp"
        android:layout_height="@dimen/_100sdp"
        android:src="@mipmap/ic_launcher_round"
        android:layout_marginTop="@dimen/_70sdp"
        android:layout_centerHorizontal="true"
        />
    <ImageView
        android:id="@+id/online_button"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/_75sdp"
        android:layout_marginRight="@dimen/_110sdp"
        android:layout_marginBottom="@dimen/_2sdp"
        android:src="@drawable/online"
        android:visibility="gone"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/_110sdp" />
    <ImageView
        android:id="@+id/offline_button"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/_75sdp"
        android:layout_marginRight="@dimen/_110sdp"
        android:layout_marginBottom="@dimen/_2sdp"
        android:src="@drawable/offline"
        android:visibility="gone"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/_110sdp" />
    <ImageButton
        android:id="@+id/i_change"
        android:layout_width="@dimen/_35sdp"
        android:layout_height="@dimen/_35sdp"
        android:layout_marginStart="@dimen/_165sdp"
        android:layout_marginLeft="@dimen/_165sdp"
        android:layout_marginTop="@dimen/_140sdp"
        android:background="@drawable/add_picture"
        android:src="@drawable/ic_photo_add"
        android:visibility="gone"
        tools:ignore="ContentDescription"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_180sdp"
            android:background="@null"
            tools:text="Admin"
            android:textColor="@color/white"
            android:textSize="21sp"
            android:textStyle="bold"
            android:autofillHints=""
            android:inputType="text"
            tools:ignore="LabelFor" />

        <ImageButton
            android:id="@+id/n_change"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="@dimen/_30sdp"
            android:layout_marginLeft="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_175sdp"
            android:background="@null"
            android:src="@drawable/ic_edit"
            android:visibility="gone"
            tools:ignore="ContentDescription" />

        <ImageButton
            android:id="@+id/d_change"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="@dimen/_40sdp"
            android:layout_marginEnd="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="124dp"
            android:background="@null"
            android:src="@drawable/ic_edit"
            android:visibility="gone"
            tools:ignore="ContentDescription" />


    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_220sdp"
        android:orientation="horizontal"
        android:gravity="center">
        <TextView
            android:id="@+id/status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Status"
            android:textSize="@dimen/_13sdp"
            android:textColor="@color/white"
            />

        <LinearLayout
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:orientation="horizontal">

            <View
                android:layout_width="@dimen/_1sdp"
                android:layout_height="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_3sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:background="@color/white"
                android:layout_marginStart="@dimen/_10sdp" />
        </LinearLayout>
        <TextView
            android:id="@+id/age_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Age"
            android:textSize="@dimen/_13sdp"
            android:textColor="@color/white"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_265sdp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <ImageButton
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginLeft="@dimen/_8sdp"
            android:src="@drawable/ic_phone"
            android:background="@drawable/transparent_color"
            android:layout_marginStart="@dimen/_8sdp" />
            <TextView
                android:id="@+id/tel_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:textColor="@color/white"
                tools:text="2120707193930"
                android:layout_marginStart="@dimen/_10sdp" />

    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="horizontal">
            <ImageButton
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginLeft="@dimen/_8sdp"
                android:src="@drawable/ic_mail"
                android:background="@drawable/transparent_color"
                android:layout_marginStart="@dimen/_8sdp" />
            <TextView
                android:id="@+id/mail_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:textColor="@color/white"
                tools:text="admin@gmail.com"
                android:layout_marginStart="@dimen/_10sdp" />

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_175sdp"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/about"
        android:textSize="@dimen/_13sdp"
        android:layout_marginLeft="@dimen/_20sdp"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/_200sdp"
        android:layout_marginStart="@dimen/_20sdp" />

        <LinearLayout
            android:id="@+id/linear1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_225sdp"
            android:orientation="vertical">

            <View
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_1sdp"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginLeft="@dimen/_20sdp"
                android:background="@color/white" />
        </LinearLayout>

            <EditText
                android:id="@+id/description"
                android:layout_width="@dimen/_250sdp"
                android:layout_height="@dimen/_100sdp"
                android:background="@null"
                android:hint="@string/describe_yourself"
                android:textColorHint="@color/white"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_205sdp"
                android:textColor="@color/white"
                android:importantForAutofill="no"
                android:layout_marginStart="@dimen/_20sdp" />

    </RelativeLayout>



    <ImageButton
        android:id="@+id/contact_me"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:background="@drawable/transparent_color"
        android:src="@drawable/ic_message"
        android:layout_marginBottom="@dimen/_25sdp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:visibility="gone" />

</RelativeLayout>